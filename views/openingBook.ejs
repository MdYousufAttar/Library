<%- include("partials/header.ejs") %>


    <%if(locals.data) { %>
        <div class="my-20 grid grid-cols-[20%_70%] gap-x-5 justify-center m-auto z-0">


            <div class="flex flex-col space-y-5 text-center">
                <img src="https://covers.openlibrary.org/b/id/<%= data[0].cover_i %>-L.jpg" name="cover_id" class="">
                <h1 class="title" name="title">
                    <%= data[0].title %>
                </h1>
            </div>

            <div class="flex flex-col space-y-10">
                <div class="flex justify-between items-center">
                    <h1 class="title">Title: <%= data[0].title %>
                    </h1>
                    <form action="/action" method="post">
                        <button class="flex m-auto items-center" type="submit" name="title" value="<%=data[0].title%>"><img src="icons/add.png" alt="Add"><img src="icons/delete.png" alt=""></button>
                    </form>
                    <p class="author">Author: <%= data[0].author_name %>
                    </p>
                </div>
                <% if(locals.data[0].first_sentence) { %>
                    <p class="first_sentence">
                        <%=data[0].first_sentence %>
                    </p>
                    <% } %>

            </div>
        </div>
        <% } %>
            </body>

            </html>